<!DOCTYPE html>
<html>
<head>
    <title>Menu</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="/css/header.css">
    <link rel='stylesheet' type='text/css'  href='/css/menu.css'>
    <link rel="stylesheet" href="/css/footer.css">
    <style>
        /* Add this CSS to position the button at the bottom-right */
        .fixed-button {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background-color: #f1f1f1;
            border: none;
            padding: 10px;
            border-radius: 50%;
            cursor: pointer;
            z-index: 1000; /* Ensure it is on top of other elements */
        }

        .fixed-button svg {
            width: 24px;
            height: 24px;
            fill: #ee1e1e;
        }
    </style>
</head>
<body>
    <%- include("./partial/Header"); %>

    <div class="food-container">
      <% foods.forEach(food => { %>
          <div class="food-item">
            <img src="/Images/<%= food.image %>" alt="<%= food.name %>">
            <h2><%= food.name %></h2>
            <p>Price: Rs.<%= parseFloat(food.price).toFixed(2) %></p> 

            <!-- Add to Cart form -->
            <form action="/cart/add" method="POST">
              <input type="hidden" name="productId" value="<%= food._id %>">  <!-- Pass productId to the backend -->
              <button type="submit" class="add-to-cart-button">+</button>
            </form>
          </div>
      <% }); %>
    </div>

    <!-- Button positioned at the bottom-right and linked to /cart -->
    <a href="/cart">
        <button class="fixed-button">
            <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#5f6368">
                <path d="M280-80q-33 0-56.5-23.5T200-160q0-33 23.5-56.5T280-240q33 0 56.5 23.5T360-160q0 33-23.5 56.5T280-80Zm400 0q-33 0-56.5-23.5T600-160q0-33 23.5-56.5T680-240q33 0 56.5 23.5T760-160q0 33-23.5 56.5T680-80ZM246-720l96 200h280l110-200H246Zm-38-80h590q23 0 35 20.5t1 41.5L692-482q-11 20-29.5 31T622-440H324l-44 80h480v80H280q-45 0-68-39.5t-2-78.5l54-98-144-304H40v-80h130l38 80Zm134 280h280-280Z"/>
            </svg>
        </button>
    </a>

    <%- include("./partial/Footer"); %>
</body>
</html>
