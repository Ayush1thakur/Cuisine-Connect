<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Orders</title>
    <link rel="stylesheet" type="text/css" href="/css/header.css">
    <link rel='stylesheet' type='text/css' href='/css/order.css'>
    <link rel="stylesheet" href="/css/footer.css">
</head>
<body>
    <%- include("./partial/Header"); %>

    <h1>Your Orders</h1>
    <% if (orders.length === 0) { %>
        <p>No orders found.</p>
    <% } else { %>
        <ul>
            <% orders.forEach(order => { %>
                <li class="order-item">
                    <strong>Order Date:</strong> <%= new Date(order.orderDate).toLocaleString() %><br>
                    <strong>Total Price:</strong> $<%= order.totalPrice.toFixed(2) %><br>
                    <strong>Order Status:</strong>
                    <span class="status <%= order.status.toLowerCase().replace(' ', '-') %>"><%= order.status %></span>
                    <br>
                    <strong>Items:</strong>
                    <ul>
                        <% order.items.forEach(item => { %>
                            <li><%= item.quantity %> x <%= item.foodName %> ($<%= item.price.toFixed(2) %>)</li>
                        <% }); %>
                    </ul>

                    <% if (order.status.toLowerCase() === 'completed') { %>
                        <!-- Display review if it exists -->
                        <% if (order.review) { %>
                            <div class="review-section">
                                <strong>Your Review:</strong>
                                <p><strong>Rating:</strong> <%= order.review.rating %> Stars</p>
                                <p><strong>Opinion:</strong> <%= order.review.opinion %></p>
                                <div class="admin-reply">
                                    <strong>Admin Remark:</strong>
                                    <% if (order.review.adminRemark) { %>
                                        <p><%= order.review.adminRemark %></p>
                                    <% } else { %>
                                        <p><em>No reply from admin yet.</em></p>
                                    <% } %>
                                </div>
                            </div>
                        <% } else { %>
                            <!-- Review option if no review exists -->
                            <a href="/orders/<%= order._id %>/review" class="btn review-btn">Leave a Review</a>
                        <% } %>
                    <% } %>
                </li>
                <hr>
            <% }); %>
        </ul>
    <% } %>
    <%- include("./partial/Footer"); %>

</body>
</html>
